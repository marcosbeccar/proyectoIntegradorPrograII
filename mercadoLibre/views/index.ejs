<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include ('./partials/head') %>
<body>
	<!-- Header -->
	<% if (cookies.userLogueado !== undefined || locals.userSession !== undefined) { %>
		<%- include('./partials/headerLogueado') %>
	<% } else { %>
		<%- include('./partials/header') %>
	<% } %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="images/banner3.jpeg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	
	<div class="container products-wrapper">
        <h2 class="products-title">Últimos Productos</h2>

        <!-- Primera Sección -->
        <div class="row">
            <% productos.forEach((producto, index) => { %>
                <% if (index < 4) { %>
                    <div class="col-12 col-md-6 col-lg-3">
                        <div class="product-card">
                            <img src="<%= producto.rutaImagen %>" alt="<%= producto.nombreProducto %>" class="product-img">
                            <h3 class="product-name"><%= producto.nombreProducto %></h3>
                            <p class="product-description"><%= producto.descripcionProducto %></p>
                            
                            <% if (producto.usuario && producto.usuario.usuario) { %>
                                <p class="product-user">Publicado por: <a href="/user/<%= producto.usuario.id %>"><%= producto.usuario.usuario %></a></p>
                            <% } else { %>
                                <p class="product-user">Publicado por: Usuario desconocido</p>
                            <% } %>

                            <a href="/product/detalleProducto?id=<%= producto.id %>" class="btn btn-primary">Ver Detalle</a>
                        </div>
                    </div>
                <% } %>
            <% }); %>
        </div>

        <!-- Segunda Sección -->
		<br>
		<br>
		<br>
		<br>
		<br>
        <div class="row">
            <% productos.forEach((producto, index) => { %>
                <% if (index >= 4 && index < 8) { %>
                    <div class="col-12 col-md-6 col-lg-3">
                        <div class="product-card">
                            <img src="<%= producto.rutaImagen %>" alt="<%= producto.nombreProducto %>" class="product-img">
                            <h3 class="product-name"><%= producto.nombreProducto %></h3>
                            <p class="product-description"><%= producto.descripcionProducto %></p>
                            
                            <% if (producto.usuario && producto.usuario.usuario) { %>
                                <p class="product-user">Publicado por: <a href="/user/perfil/<%= producto.usuario.id %>"><%= producto.usuario.usuario %></a></p>
                            <% } else { %>
                                <p class="product-user">Publicado por: Usuario desconocido</p>
                            <% } %>

                            <a href="/product/detalleProducto?id=<%= producto.id %>" class="btn btn-primary">Ver Detalle</a>
                        </div>
                    </div>
                <% } %>
            <% }); %>
        </div>

        <!-- Tercera Sección -->

		<br>
		<br>
		<br>
		<br>
		<br>
        <div class="row">
            <% productos.forEach((producto, index) => { %>
                <% if (index >= 8 && index < 12) { %>
                    <div class="col-12 col-md-6 col-lg-3">
                        <div class="product-card">
                            <img src="<%= producto.rutaImagen %>" alt="<%= producto.nombreProducto %>" class="product-img">
                            <h3 class="product-name"><%= producto.nombreProducto %></h3>
                            <p class="product-description"><%= producto.descripcionProducto %></p>
                            
                            <% if (producto.usuario && producto.usuario.usuario) { %>
                                <p class="product-user">Publicado por: <a href="/user/perfil/<%= producto.usuario.id %>"><%= producto.usuario.usuario %></a></p>
                            <% } else { %>
                                <p class="product-user">Publicado por: Usuario desconocido</p>
                            <% } %>

                            <a href="/product/detalleProducto?id=<%= producto.id %>" class="btn btn-primary">Ver Detalle</a>
                        </div>
                    </div>
                <% } %>
            <% }); %>
        </div>

    </div>
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include ('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>