<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include ('./partials/head') %>

<body>
	<!-- Header -->
	<%- include ('./partials/header') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ingresar</h2>
			</div>
			<!-- Show the "ultimos" products -->
		<h2>Login</h2>
		<form action="/user/login" method="POST" id="registro-form"> <!--uso el mismo id que en register-->
			<div id="separador">
			<label for="usuario">Usuario (email):</label>
			<input type="email" id="usuario" name="usuario" class="form-input" 
				value ="<%= locals.old && old.email ? old.email : '' %>"><br>
			<% if (locals.errors !== undefined && errors.email !== undefined) { %>
				<p class="feedback"><%= errors.email.msg %></p>
			<% } %>

				
				<!-- '?' es como un if, y ':' es como un else-->

			<label for="contrasenia">Contrase√±a:</label>
			<input type="password" id="contrasenia" name="contrasenia" class="form-input" 
			value="<%= locals.old  && old.contrasenia ? old.contrasenia : "" %>">
			<% if (locals.errors && errors.contrasenia) { %>
				<p class="feedback"><%= errors.contrasenia.msg %></p>
			<% } %>

			<label for="recordarme" ><input type="checkbox" id="recordarme" name="recordarme" class="form-checkbox">Recordarme</label>
			</div>
		
			<button type="submit" id="submit-btn" class="form-button">Enviar</button>
		</form>
		
		
		</div>
	</div>

	<!-- footer -->
	<%- include ('./partials/footer') %>
	<!-- /footer -->
</body>

</html>