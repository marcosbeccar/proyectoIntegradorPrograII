<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include ('./partials/head') %>

<body>
	<!-- Header -->
	<%- include ('./partials/header') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ingresar</h2>
			</div>
			<!-- Show the "ultimos" products -->
		<h2>Login</h2>
		<% if (locals.errors) { %> <!--Solo si errors existe (locals.errors=errors)-->
			<% errors.forEach(error => { %>
				<!--forEach es una especie de for loop, va a mostrar un <p> por error-->
				<p class="mensajes-error">
					<%= error.msg %>
				</p>
			<% }) %>
		<% } %>
		<form action="/user/login" method="POST" id="registro-form"> <!--uso el mismo id que en register-->
			<div id="separador">
			<label for="email"> Email:</label>
			<input type="email" id="email" name="email" class="form-input" 
				value="<%= locals.old && old.email ? old.email : '' %>"><br>
                    <!-- '?' es como un if, y ':' es como un else-->


			<label for="contrasenia">Contrase√±a:</label>
			<input type="password" id="contrasenia" name="contrasenia" class="form-input">


			<label for="recordarme" ><input type="checkbox" id="recordarme" name="recordarme" class="form-checkbox">Recordarme</label>
			</div>
		
			<button type="submit" id="submit-btn" class="form-button">Enviar</button>
		</form>
		
		
		</div>
	</div>

	<!-- footer -->
	<%- include ('./partials/footer') %>
	<!-- /footer -->
</body>

</html>