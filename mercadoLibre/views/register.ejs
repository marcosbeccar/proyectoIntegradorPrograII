<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include ('./partials/head') %>

<body>
	<!-- Header -->
	<%- include ('./partials/header') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>
			<!-- Show the "ultimos" products -->
			
		<h2>Registración</h2>
		<form action="" method="GET">
			<label for="email">Email:</label>
			<input type="email" id="email" name="email"><br>

			<label for="usuario">Usuario:</label>
			<input type="text" id="usuario" name="usuario"><br>

			<label for="contrasena">Contraseña:</label>
			<input type="password" id="contrasena" name="contrasena"><br>

			<label for="fecha_nacimiento">Fecha de nacimiento:</label>
			<input type="date" id="fecha_nacimiento" name="fecha_nacimiento"><br>

			<label for="nro_documento">Número de documento:</label>
			<input type="number" id="nro_documento" name="nro_documento"><br>

			<label for="foto_perfil">Foto de perfil:</label>
			<input type="text" id="foto_perfil" name="foto_perfil"><br>

			<button type="submit">Enviar</button>
		</form>



	<!-- footer -->
	<%- include ('./partials/footer') %>
	<!-- /footer -->
</body>

</html>