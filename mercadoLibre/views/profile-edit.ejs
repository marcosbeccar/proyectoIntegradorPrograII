<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include ('./partials/head') %>

<body>
	<!-- Header -->
	<%- include ('./partials/headerLogueado') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<form action="" method="GET" id="registro-form"> <!-- Para evitar que se rompa, dejamos vacío el action -->
				<label for="email">Email:</label>
				<input type="email" id="email" name="email" class="form-input"><br>
			
				<label for="usuario">Usuario:</label>
				<input type="text" id="usuario" name="usuario" class="form-input"><br>
			
				<label for="contrasena">Contraseña:</label>
				<input type="password" id="contrasena" name="contrasena" class="form-input"><br>
			
				<label for="fecha_nacimiento">Fecha de nacimiento:</label>
				<input type="date" id="fecha_nacimiento" name="fecha_nacimiento" class="form-input"><br>
			
				<label for="nro_documento">Número de documento:</label>
				<input type="number" id="nro_documento" name="nro_documento" class="form-input"><br>
			
				<label for="foto_perfil">Foto de perfil:</label>
				<input type="text" id="foto_perfil" name="foto_perfil" class="form-input"><br>
			
				<button type="submit" id="submit-btn">Enviar</button>
			</form>


	<!-- footer -->
	<%- include ('./partials/footer') %>
	<!-- /footer -->
</body>

</html>